# synchonise le repertoire ou le repertoire cible sur l'IP_cible
######################################################
#                                                    #
#  RSYNC "IP" "chemin"                               #
#  RSYNC "IP" #chemin=$(pwd)                         #
#                                                    #
######################################################

#test de l'argument chemin
    if [ $2 ]
    then
        chemin=$2
    else
        chemin=$(pwd)
    fi
    echo "chemin=$chemin"

#test de l'argument IP
    if [ $1 ]
    then
        IP=$1
    else
        echo "IP cible :"
        read
        IP=$REPLY
    fi
    echo "IP=$IP"

#et hop on copie tout Ã§a vers la cible
    echo "Copie vers pi@$IP:$chemin/"
#    rsync -u -v -l -r $chemin/* pi@$IP:$chemin
    rsync -v -l -r $chemin/* pi@$IP:$chemin  #bypass update & copy all files

exit
